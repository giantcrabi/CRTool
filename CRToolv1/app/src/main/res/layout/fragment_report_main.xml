<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Fragment.ReportMainFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnReportSalesOut"
            android:drawableLeft="@drawable/ic_assignment_turned_in_white_36dp"
            style="@style/DarkButton"
            android:text="@string/report_sales_out" />
        <Button
            android:id="@+id/btnReportHistory"
            android:drawableLeft="@drawable/ic_assessment_white_36dp"
            style="@style/DarkButton"
            android:text="@string/report_history" />
        <Button
            android:id="@+id/btnReportTrackRecord"
            android:drawableLeft="@drawable/ic_timeline_white_36dp"
            style="@style/DarkButton"
            android:text="@string/report_track_record" />
    </LinearLayout>
</RelativeLayout>
